            $(document).ready(function() {
                var full_title = document.title.split(' | ');
                var title = full_title[0];
                if ( title == "Newsroom" ) {
                    section = "news_menu";
                } else if ( title == "Articles" ) {
                    section = "articles_menu";
                } else if ( title == "Self" ) {
                    section = "self_menu";
                }
                d = document.getElementById(section);
                d.className = "curr_menu_item";
            });
        </script>
